<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:s="clr-namespace:DiagramDesigner"
                    xmlns:c="clr-namespace:DiagramDesigner.Controls">

    <s:Toolbox x:Key="LumpedComponents" ItemSize="50,40" SnapsToDevicePixels="True"
             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
        <ItemsControl.Items>

            <s:ToolboxItem Type="ResistorInSeries">
                <StackPanel  ToolTip="Resistor In Series">
                    <Grid>
                        <!--Empty columns are created to prevent a textBlock dependent layout-->
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <Path Grid.Column="1" Style="{StaticResource ResistorInSeriesPath}"/>
                        <Grid Grid.Column="1" Margin="-2" IsHitTestVisible="False">
                            <Grid HorizontalAlignment="Left" VerticalAlignment="Center">
                                <Rectangle Style="{StaticResource ConnectorStyle}" />
                                <TextBlock Text="1" Style="{StaticResource TextBlockConnectorCountStyle}"/>
                            </Grid>
                            <Grid HorizontalAlignment="Right" VerticalAlignment="Center">
                                <Rectangle Style="{StaticResource ConnectorStyle}" />
                                <TextBlock Text="1" Style="{StaticResource TextBlockConnectorCountStyle}"/>
                            </Grid>
                        </Grid>
                    </Grid>
                    <TextBlock Text="Resistor In Series" Style="{StaticResource ToolBoxItemSignature}"/>
                </StackPanel>
            </s:ToolboxItem>

